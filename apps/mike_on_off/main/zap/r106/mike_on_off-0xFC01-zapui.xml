<!-- Cluster definition -->
<cluster
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="urn:zigbee:cdk:configuration ../cluster.xsd"
  name="CustomClusterUptime"
  description="A custom cluster for Uptime"
  code="0xFC01"
  define="FC01_CLUSTER"
  role="server"
  revision="1">

  <!-- Attributes -->
  <attribute
    name="Value"
    code="0x0000"
    type="uint32"
    writable="true"
    optional="false"
    default="0"
    reportable="true"
    minInterval="0"
    maxInterval="86400"
    reportableChange="1">
    <description>The 32-bit unsigned integer value</description>
  </attribute>

  <!-- Global attributes -->
  <attribute
    name="ClusterRevision"
    code="0xFFFD"
    type="uint16"
    default="1"
    writable="false"
    optional="false">
    <description>Revision of the cluster specification</description>
  </attribute>

  <attribute
    name="FeatureMap"
    code="0xFFFC"
    type="bitmap32"
    default="0"
    writable="false"
    optional="false">
    <description>Feature map indicating supported features</description>
  </attribute>

  <!-- Commands (optional) -->
  <command
    name="SetValue"
    code="0x00"
    source="client"
    response="false"
    optional="true">
    <description>Set the uint32 value</description>
    <arg name="value" type="uint32" />
  </command>

  <command
    name="GetValue"
    code="0x01"
    source="client"
    response="GetValueResponse"
    optional="true">
    <description>Get the current uint32 value</description>
  </command>

  <command
    name="GetValueResponse"
    code="0x02"
    source="server"
    response="false"
    optional="true">
    <description>Response to GetValue</description>
    <arg name="value" type="uint32" />
  </command>

  <!-- Events (optional) -->
  <event
    name="ValueChanged"
    code="0x00"
    priority="info"
    optional="true">
    <description>Value was changed</description>
    <arg name="newValue" type="uint32" />
  </event>

  <!-- Description of the cluster -->
  <description>
    This cluster provides functionality to read and write a 32-bit unsigned integer value.
    It can be used for various purposes where simple numeric data exchange is needed.
  </description>
</cluster>
