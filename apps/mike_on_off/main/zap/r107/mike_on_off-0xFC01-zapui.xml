<!-- Cluster definition -->
<cluster xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="types types.xsd cluster cluster.xsd"
         name="CustomClusterUptime"
         description="A custom cluster for Uptime"
         code="0xFC01"
         define="FC01_CLUSTER"
         domain="FC01_CLUSTER_DOMAIN"
         role="server"
         init="false"
         isFabricScoped="false">
  
  <!-- Classifications -->
  <classification hierarchy="base" role="utility" picsCode="UINT32" scope="Node"/>
  
  <!-- Attributes -->
  <attribute side="server" 
             code="0x0000" 
             define="Uptime" 
             type="uint32" 
             writable="true" 
             optional="false" 
             isArray="false"
             min="0"
             max="4294967295"
             default="0"
             reportable="true"
             reportMin="0"
             reportMax="86400"
             reportableChange="1">
    <description>The 32-bit unsigned integer value</description>
  </attribute>
  
  <!-- Global attributes included by default -->
  <globalAttribute side="server" code="0xFFFC" define="CLUSTER_REVISION" type="uint16" value="1"/>
  <globalAttribute side="server" code="0xFFFB" define="FEATURE_MAP" type="bitmap32" value="0"/>
  
  <!-- Commands (optional) -->
  <command source="client" code="0x00" name="SetValue" optional="true" description="Set the Uptime value">
    <arg name="value" type="uint32" isArray="false"/>
  </command>
  
  <command source="server" code="0x01" name="GetValue" optional="true" description="Get the current Uptime value" response="GetValueResponse">
  </command>
  
  <command source="server" code="0x02" name="GetValueResponse" optional="true" description="Response to GetValue">
    <arg name="value" type="uint32" isArray="false"/>
  </command>
  
  <!-- Events (optional) -->
  <event code="0x00" name="ValueChanged" priority="info" side="server" optional="true" description="Value was changed">
    <arg name="newValue" type="uint32" isArray="false"/>
  </event>
  
  <!-- Description of the cluster -->
  <description>
    A custom cluster for Uptime
  </description>
</cluster>
